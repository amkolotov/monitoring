{
  "__inputs": [],
  "__requires": [{"type":"grafana","id":"grafana","name":"Grafana","version":"10.2.2"}],
  "title": "cAdvisor - Containers (Example)",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Container CPU %",
      "datasource": {"type":"prometheus","uid":"Prometheus"},
      "targets": [
        {"expr": "sum by (container_label_com_docker_compose_service) (rate(container_cpu_usage_seconds_total{image!\\\"\\\"}[5m])) * 100", "legendFormat": "{{container_label_com_docker_compose_service}}"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Container Memory (RSS)",
      "datasource": {"type":"prometheus","uid":"Prometheus"},
      "targets": [
        {"expr": "sum by (container_label_com_docker_compose_service) (container_memory_rss) / 1024 / 1024", "legendFormat": "{{container_label_com_docker_compose_service}} MB"}
      ]
    }
  ]
}

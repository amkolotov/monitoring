# ===== Traefik & Domains =====
MON_DOMAIN=monitoring.example.com
TRAEFIK_ENTRYPOINT=websecure
TRAEFIK_CERTRESOLVER=letsencrypt
TRAEFIK_BASIC_AUTH=admin:$$apr1$$d41d8cd98f$$hashedexample

# ===== Path prefixes (must start with /) =====
GRAFANA_PATH=/grafana
PROMETHEUS_PATH=/prometheus
ALERTMANAGER_PATH=/alertmanager
FLOWER_PATH=/flower

# ===== External URLs (with scheme and path) =====
GRAFANA_ROOT_URL=https://monitoring.example.com/grafana
PROMETHEUS_EXTERNAL_URL=https://monitoring.example.com/prometheus
ALERTMANAGER_EXTERNAL_URL=https://monitoring.example.com/alertmanager

# ===== Prometheus =====
PROMETHEUS_RETENTION=15d
PROMETHEUS_RETENTION_SIZE=5GB

# ===== Grafana =====
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me
GRAFANA_INSTALL_PLUGINS=

# ===== Flower / Celery =====
CELERY_BROKER_URL=redis://redis:6379/0
FLOWER_BASIC_AUTH=user:password

# ===== Postgres Exporter (DSN) =====
POSTGRES_EXPORTER_DSN=postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=disable

# ===== Redis Exporter =====
REDIS_EXPORTER_ADDR=redis://redis:6379
REDIS_EXPORTER_PASSWORD=

# ===== Portainer via Traefik =====
PORTAINER_HOST=portainer.example.com

# ===== Alertmanager (Telegram only) =====
TELEGRAM_BOT_TOKEN=000000:YOUR_BOT_TOKEN
TELEGRAM_CHAT_ID=123456789
